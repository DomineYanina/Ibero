<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView
                android:id="@+id/text_view_item_order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#3F51B5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image_sync_status"
                app:layout_constraintBaseline_toBaselineOf="@id/image_sync_status"
                tools:text="1" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/image_sync_status"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:id="@+id/text_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado: Aprobado"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="4dp"/>

            <TextView
                    android:id="@+id/text_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Falla: Mancha"
                    android:textSize="14sp"
                    android:textColor="#B71C1C"
                    android:layout_marginTop="4dp"/>

            <TextView
                    android:id="@+id/text_metros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metros: 150.0"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/image_sync_status"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_cloud_upload"
                android:contentDescription="Estado de SincronizaciÃ³n"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>