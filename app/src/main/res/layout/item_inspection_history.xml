<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/text_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resultado: Aprobado"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="4dp"/>

            <!-- Se agregan las vistas que faltaban -->
            <TextView
                    android:id="@+id/text_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Falla: Mancha"
                    android:textSize="14sp"
                    android:textColor="#B71C1C"
                    android:layout_marginTop="4dp"/>

            <TextView
                    android:id="@+id/text_metros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Metros: 150.0"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"/>

        </LinearLayout>

        <ImageView
                android:id="@+id/image_sync_status"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_cloud_upload"
                android:contentDescription="Estado de SincronizaciÃ³n"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
