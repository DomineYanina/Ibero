<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ContinuarCargaActivity">

    <!-- ScrollView para hacer todo el contenido deslizable -->
    <ScrollView
            android:id="@+id/main_content_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F5F5F5">

            <!-- Título de la actividad -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continuar Registro"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#3F51B5"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"/>

            <!-- Contenedor de búsqueda de Hoja de Ruta -->
            <LinearLayout
                    android:id="@+id/hoja_ruta_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_hoja_ruta_continuar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hoja de Ruta"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_hoja_ruta_continuar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                        android:id="@+id/btn_buscar_continuar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buscar"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="#2196F3"
                        android:textColor="@android:color/white"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

            </LinearLayout>

            <!-- Este es el contenedor principal que se ocultará hasta que se realice la búsqueda -->
            <LinearLayout
                    android:id="@+id/form_and_records_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                <!-- Campo de "Tipo de Calidad" -->
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_tipo_calidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipo de Calidad"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:layout_marginBottom="12dp">
                    <AutoCompleteTextView
                            android:id="@+id/spinner_tipo_calidad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de "Tipo de Falla" (oculto por defecto) -->
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_tipo_de_falla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipo de Falla"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                        android:visibility="gone"
                        android:layout_marginBottom="12dp">
                    <AutoCompleteTextView
                            android:id="@+id/spinner_tipo_de_falla"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Campo de "Metros de Tela" -->
                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_metros_de_tela"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Metros de Tela"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginBottom="24dp">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_metros_de_tela"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contenedor de botones "Continuar" y "Finalizar" -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                    <Button
                            android:id="@+id/btn_incorporar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Continuar"
                            android:padding="16dp"
                            android:layout_marginEnd="8dp"
                            android:backgroundTint="#4CAF50"
                            android:textColor="@android:color/white"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

                    <Button
                            android:id="@+id/btn_guardar_registro"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Finalizar"
                            android:padding="16dp"
                            android:layout_marginStart="8dp"
                            android:backgroundTint="#F44336"
                            android:textColor="@android:color/white"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>
                </LinearLayout>

                <!-- Contenedor de registros existentes -->
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:background="@drawable/border_rounded_with_shadow"
                        android:layout_marginTop="24dp">

                    <TextView
                            android:id="@+id/text_existing_records_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:text="Registros ingresados para el artículo:" />

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_existing_records"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            tools:listitem="@layout/item_inspection_history" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Overlay de carga y barra de progreso -->
    <View
            android:id="@+id/loading_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nuevo botón de "Cancelar" anclado en la parte inferior -->
    <Button
            android:id="@+id/btn_cancelar_continuar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:backgroundTint="#FA0000"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
