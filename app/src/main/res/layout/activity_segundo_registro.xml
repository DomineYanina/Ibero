<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F5F5F5"
        tools:context=".SegundoRegistroActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuar Registro"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_tipo_calidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de Calidad"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginBottom="12dp">
        <AutoCompleteTextView
                android:id="@+id/spinner_tipo_calidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_tipo_de_falla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de Falla"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:visibility="gone"
            android:layout_marginBottom="12dp">
        <AutoCompleteTextView
                android:id="@+id/spinner_tipo_de_falla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_metros_de_tela"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Metros de Tela"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_marginBottom="24dp">
        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_metros_de_tela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

        <Button
                android:id="@+id/btn_incorporar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Continuar"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>

        <Button
                android:id="@+id/btn_guardar_registro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Finalizar"
                android:padding="16dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"/>
    </LinearLayout>

</LinearLayout>